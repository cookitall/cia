	<select id="getByteImageList" resultType="map">
    	SELECT 
	    	menu_name AS menuName,
	    	menu_price AS menuPrice,
	    	menu_info AS menuInfo,
	    	menu_open AS menuOpen,
	    	shop_name AS shopName,
	    	menu_num AS menuNum,
	    	menu_Image AS menuImage
    	FROM cia_menu
	</select>
	
	
